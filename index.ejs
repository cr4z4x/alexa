<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Daily Tasks</title>
</head>
<body>
  <h1>Daily Tasks</h1>
  <form id="task-form" action="/tasks" method="POST">
    <input type="text" id="task" name="taskName" placeholder="Add a new task" required>
    <button type="submit">Add Task</button>
  </form>
  <h2>Task List</h2>
  <ul>
    <% tasks.forEach(function(task) { %>
      <li>
        <span><%= task.taskName %></span>
        <% if (task.completed) { %>
          <span class="completed">Completed</span>
        <% } else { %>
          <form action="/update/<%= task._id %>" method="POST">
            <button type="submit">Mark as Completed</button>
          </form>
        <% } %>
        <form action="/delete/<%= task._id %>" method="POST">
          <button type="submit">Delete</button>
        </form>
      </li>
    <% }); %>
  </ul>
  <p>Completion Percentage: <%= completionPercentage.toFixed(2) %>%</p>
</body>
</html>
